<p id="notice"><%= notice %></p>

<h1>Listing Contact Records</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_records.each do |contact_record| %>
      <tr>
        <td><%= contact_record.email %></td>
        <td><%= link_to 'Show', seven_contact.contact_record_path(contact_record) %></td>
        <td><%= link_to 'Destroy', seven_contact.contact_record_path(contact_record), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

